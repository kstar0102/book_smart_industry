# ios/Podfile

source 'https://cdn.cocoapods.org/'
platform :ios, '15.0'

# Helper to resolve RN scripts even when hoisted
def node_require(script)
  require Pod::Executable.execute_command(
    'node',
    ['-p', "require.resolve('#{script}', {paths: [process.argv[1]]})", __dir__]
  ).strip
end

node_require('react-native/scripts/react_native_pods.rb')
node_require('react-native-permissions/scripts/setup.rb')

install! 'cocoapods',
  :generate_multiple_pod_projects => true,
  :incremental_installation => true

prepare_react_native_project!

# âœ… Enable modular headers globally so Swift pods can import C/ObjC deps
use_modular_headers!

# Optional: disable Flipper for now
flipper_config = FlipperConfiguration.disabled

# If you don't explicitly need frameworks, don't set use_frameworks! at all.
# (Leaving it off avoids extra conflicts.)

config = use_native_modules!

target 'BookSmart' do
  use_react_native!(
    :path => config[:reactNativePath],
    :flipper_configuration => flipper_config,
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :hermes_enabled => false,
    :fabric_enabled => false
  )

  # Do NOT pin Firebase here; let RNFB pick compatible versions

  target 'BookSmartTests' do
    inherit! :complete
  end
end

post_install do |installer|
  # Optional: keep RNFirebase static frameworks (fine with modular headers)
  $RNFirebaseAsStaticFramework = true

  react_native_post_install(
    installer,
    config[:reactNativePath],
    :mac_catalyst_enabled => false
  )

  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |cfg|
      cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      cfg.build_settings['SUPPORTS_MACCATALYST'] = 'NO'
      cfg.build_settings['DERIVE_MACCATALYST_PRODUCT_BUNDLE_IDENTIFIER'] = 'NO'
    end
  end
end
